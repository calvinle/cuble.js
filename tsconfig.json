{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "lib": [
      "ES2015",
      "DOM"
    ],

    "rootDir": "src",
    "outDir": "",
    "declaration": true,
    "sourceMap": true,

    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "strictNullChecks": true
  },
  "include": [
    "src"
  ]
}
