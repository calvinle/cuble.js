{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "umd",
    "target": "es5",
    "lib": [
      "ES2015",
      "DOM"
    ],

    "outDir": "build",
    "declaration": true,
    "sourceMap": true,

    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "strictNullChecks": true
  },
  "include": [
    "*.ts"
  ],
  "exclude": [
    "build"
  ]
}
